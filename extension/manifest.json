
{
  "manifest_version": 3,
  "name": "Digital Habits Tracker",
  "version": "1.0",
  "description": "Monitor and manage your digital habits",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
